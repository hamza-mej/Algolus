{% for secondBanner in secondBanner %}
    <div id="modal-edit-secondBanner-{{ secondBanner.id }}" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-weight-bold ml-3 h3">Edit SecondBanner</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="{{ path('dashboard_edit_secondBanner',{ 'id' : secondBanner.id }) }}" method="POST"
                      id="formEditSecondBanner" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="row">

                            <div class="col-md-12 d-flex justify-content-center">
                                <div class="form-group">
                                    {# {{ product.productImage }} #}
                                    <img src="{{ asset('uploads/secondBanner/') ~ secondBanner.image }}" alt="{{ secondBanner.image }}"
                                         style="margin-left: 100px;" class="list-thumbnail responsive card-img-center img-thumbnail mb-4">
                                    <input type="file" id="image" class="form-control chp mb-1 h6 font-weight-bold text-muted" placeholder="Image"
                                           data-toggle="tooltip" title="(Facultatif)"
                                           name="SecondBannerImage">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="SecondBannerTitle" class="form-group has-float-label mb-1 h6 font-weight-bold text-muted">
                                        SecondBanner Title
                                    </label>
                                    <input type="text" id="SecondBannerTitle" class="form-control chp" placeholder="Title"
                                           value="{{ secondBanner.title }}"
                                           name="SecondBannerTitle" required>
                                </div>
                            </div>

                            <div class="msgerreur text-danger"></div>


                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-light btn-shadow font-weight-bold" data-dismiss="modal">
                            Cancel
                        </button>
                        <button class="btn btn-primary btn-shadow font-weight-bold" type="submit">
                            Edit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endfor %}
