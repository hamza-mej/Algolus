                <form class="radio_content radio_1"
                      id="formAddStock" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="row">


                            <div class="col-md-12 d-flex justify-content-center mb-5">
                                <div class="col-md-6 ">
                                    <div class="form-group ">
                                        <label for="product" class="form-group has-float-label mb-1 h5 font-weight-bold text-muted d-flex justify-content-center">
                                            Product List
                                        </label>
                                        <select class="form-control mt-2 selectProduct" id="product" name="selectProduct">
                                            <option selected="true" style="display:none;">Select Product</option>
                                            {% for product in products %}
                                                <option
                                                        value="{{ product.id }}">{{ product.productName }}</option>
                                            {% endfor %}
                                        </select>
                                        <hr size="8" width="90%" color="#00365A">
                                    </div>
                                </div>
                            </div><br><br>

                            <div class="col-md-4 ">
                                <div class="form-group " id="firstProduct">
                                    <label for="selectColor" class="form-group has-float-label mb-1 h6 font-weight-bold text-muted">
                                        Color List
                                    </label>
                                    <select class="form-control mt-2 selectColor"  id="selectColor" name="color[]">
                                        <option selected="true" style="display:none;">Select Color</option>
                                        {% for color in color %}
                                            <option
                                                    value="{{ color.id }}">{{ color.colorName }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4 ">
                                <div class="form-group " id="firstProduct">
                                    <label for="selectSize" class="form-group has-float-label mb-1 h6 font-weight-bold text-muted">
                                        Size List
                                    </label>
                                    <select class="form-control mt-2 selectSize" id="selectSize" name="size[]">
                                        <option selected="true" style="display:none;">Select Size</option>
                                        {% for size in size %}
                                            <option
                                                    value="{{ size.id }}">{{ size.sizeName }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-2 ">
                                <div id="firstProduct">
                                    <div class="form-group " >
                                        <label for="selectQty" class="form-group has-float-label mb-1 h6 font-weight-bold text-muted">
                                            Qty
                                        </label>
                                        <div class="qtyProduct">
                                            <input type="number" step="1" class="mt-2 qty form-control chp selectQty" id="selectQty[]" placeholder="Qty" name="qty"  required>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 ">
                                <label for="Color" class="form-group has-float-label mb-1 h6 font-weight-bold text-muted d-flex justify-content-center">
                                    &nbsp;&nbsp;-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+
                                </label>
                                <div class="form-group d-flex" id="firstProduct">

                                    <span  class="mt-2 removeField btn btn-outline-danger handle testRemove mr-2" >-</span>
                                    <span class="mt-2 addField btn btn-outline-success handle ">+</span>
                                </div>
                            </div>



                            {#                        <div class="col-md-12" >#}
                            <div class="col-md-4 d-inline-block" id="testColor">
                            </div>
                            <div class="col-md-4 d-inline-block" id="testSize">
                            </div>
                            <div class="col-md-2 d-inline-block" id="testQty">
                            </div>
                            <div class="col-md-2 d-inline-block" id="testRemove">
                            </div>

                            <p id="demo"></p>
                            <p id="demoDelete"></p>
                            <div class="msgerreur text-danger"></div>


                        </div>

                    </div>

                </form>

                <div class="modal-footer">
                    <button class="btn btn-light btn-shadow font-weight-bold" data-dismiss="modal">
                        Cancel
                    </button>
                    <button class="addToController btn btn-primary btn-shadow font-weight-bold">
                        Add
                    </button>
                </div>

