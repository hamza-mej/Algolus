{% for blog in blogs %}
<div class="col-lg-6 col-md-6 col-12">
    <div class="blog-wrap mb-30">
        <div class="blog-img mb-20">

            <a href="{{ path('app_blog_details', {id: blog.id})  }}">
                <img src="{{ asset('uploads/blog/') ~ blog.Image }}" alt="{{ blog.title }}">
            </a>

        </div>
        <div class="blog-content blog-border">
            <h3><a href="/blogs/news/there-are-many-variations-of-passages-of-lorem-2">{{ blog.title }}</a></h3>
        </div>
    </div>
</div>
{% endfor %}