        <div class="main-wrapper">
            <div class="slider-area">
                <div class="slider-active owl-carousel nav-style-1 dot-style-1 nav-dot-left">
                    {% for banner in banner %}
                    <div class="single-slider height-100vh bg-img" data-dot="01" style="background-image:url(assets/images/slider/hm1-bg-1.jpg);">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-lg-5 col-md-6 col-12 col-sm-6">
                                    <div class="slider-sin-img-hm1 slider-sin-mrg1 slider-animated-1">
                                        <img src="{{ asset('uploads/banner/') ~ banner.Image }}" alt="{{ banner.image }}">
                                    </div>
                                </div>
                                <div class="col-lg-7 col-md-6 col-12 col-sm-6">
                                    <div class="slider-content-1 slider-animated-1 ml-70">
                                        <h3 class="animated">{{ banner.supTitle }}</h3>
                                        <h1 class="animated">{{ banner.title }}</h1>
                                        <p class="animated">{{ banner.description }}</p>
                                        <div class="slider-btn-1 default-btn btn-hover">
                                            <a class="animated btn-color-theme btn-size-md btn-style-outline" href="{{ path('app_product_shop') }}">SHOP NOW</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="banner-area pt-100 pb-100">
                {% for secondBanner in secondBanner %}
                <div class="container">
                    <div class="bg-img pt-100 pb-100 learn-banner" style="background-image:url({{ asset('uploads/secondBanner/') ~ secondBanner.Image }});">
{#                        <img src="{{ vich_uploader_asset(secondBanner) }}" alt="{{ secondBanner.image }}">#}
                        <div class="row">
                            <div class="col-lg-10 col-md-10 col-sm-11">
                                <div class="banner-content">
                                    <h2>{{ secondBanner.title | raw }}</h2>
                                    <a href="{{ path('app_blog') }}">Learn More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="product-area pb-135">
                <div class="container">
                    <div class="section-title text-center mb-40">
                        <h2>Best Sell</h2>
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text</p>
                    </div>

                    <div class="product-slider-active owl-carousel">
                        {% for product in products | slice(0, 3) %}
                        <div class="product-wrap">
                            <div class="product-img mb-15">
                                <a href="{{ path('app_shop_show', {id: product.id})  }}"><img src="{{ asset('uploads/product/') ~ product.productImage }}" alt="{{ product.productName }}"></a>
                                <div class="product-action">
                                    <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class="la la-plus"></i></a>
                                    <a title="Wishlist" href="#"><i class="la la-heart-o"></i></a>
                                    <a title="Compare" href="#"><i class="la la-retweet"></i></a>
                                </div>
                            </div>
                            <div class="product-content">
                                <span>{{ product.productDescription|striptags|length > 17 ? product.productDescription|slice(0, 17) ~ '...' : product.productDescription|striptags }}</span>
                                <h4><a href="{{ path('app_shop_show', {id: product.id}) }}">{{ product.productName }}.</a></h4>
                                <div class="price-addtocart">
                                    <div class="product-price">
                                        <span>${{ product.productPrice }}</span>
                                    </div>
                                    <div class="product-addtocart">
                                        <a title="Add To Cart" href="{{ path('app_cart_add', {id: product.id}) }}">+ Add To Cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
            <div class="discount-area pb-100">
                <div class="container">
                    <div class="row align-items-center">
                        {% for HomeBlog in HomeBlog %}
                        <div class="col-lg-7 col-md-6">
                            <div class="discount-img">
                                <a href="#">
                                    <img src="{{ asset('uploads/homeBlog/') ~ HomeBlog.homeImage }}" alt="{{ HomeBlog.homeImage }}">
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-6">
                            <div class="discount-content">
                                <p>{{ HomeBlog.homeDescription }}</p>
                                <h2>{{ HomeBlog.homeTitle }}</h2>
                                <p class="bright-color">{{ HomeBlog.homeContent }}</p>
                                <div class="discount-btn default-btn btn-hover">
                                    <a class="btn-color-theme btn-size-md btn-style-outline" href="{{ path('app_product_shop') }}">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
