                                            <div class="d-inline-block rounded  " style="width: 110px;">
                                                {{ form_row(formFilter.min,
                                                    { 'attr' : {'class' : 'pl-3'} }) }}
                                            </div>
                                            <div class="d-inline-block rounded  ml-2" style="width: 110px;">
                                                {{ form_row(formFilter.max,
                                                    { 'attr' : {'class' : 'pl-3'} }) }}
                                            </div>
                                        </div>
                                        <div id="slider" data-min="{{ min }}" data-max="{{ max }}"></div>

{#                                        <div id="slider"></div>#}
                                    </div>
                                </div>
                                <div class="sidebar-widget shop-sidebar-border pt-40 mt-40">
                                    <h4 class="sidebar-title">Refine By </h4>
