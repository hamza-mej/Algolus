{#                                        </select>#}
                                        {% include 'Front/Product/_sorting.html.twig' %}

                                    </div>
                                </div>
                            </div>
                            <div class="shop-bottom-area">
                                <div class="tab-content jump">
                                    <div id="shop-1" class="tab-pane active">
                                        <div class="row js-filter-content">
                                            {% include 'Front/Product/_product.html.twig' %}
                                        </div>
                                    </div>
                                    <div id="shop-2" class="tab-pane">
                                        <div class="row js-filter-content-show">
                                            {% include 'Front/Product/_product_show.html.twig' %}
                                        </div>
                                    </div>

                                    <div class="js-filter-pagination">
                                        {% include 'Front/Product/_pagination.html.twig' %}
                                    </div>

{#                                    <div class="pagination-style text-center">#}
