{#                                        </ul>#}
{#                                    </div>#}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="sidebar-wrapper ">
                                {{ form_start(formFilter, {attr: {class: 'js-filter-form'}}) }}
                                <div class="sidebar-widget">
                                    <h4 class="sidebar-title">Search </h4>
                                    <div class="sidebar-search mb-40 mt-20">
